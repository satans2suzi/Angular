{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "project": [
      "tsconfig.json",
      "tsconfig.app.json"
    ]
  },
  "plugins": [
    "@typescript-eslint",
    "@angular-eslint",
    "html"
  ],
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error"
    ],
    "prefer-const": ["off", {
      "destructuring": "any",
      "ignoreReadBeforeAssign": true
    }]
  }
}
